{
  "name": "order-remembererer",
  "private": true,
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "heroku-postbuild": "npm run production",
    "pretty": "prettier --write \"./resources/js/**/*.{js,jsx,json,vue}\"",
    "lint": "eslint \"./resources/js/**/*.{js,vue}\"",
    "lint-fix": "npm run lint -- --fix",
    "lint-log": "npm run lint > eslint.log",
    "lint-fix-log": "npm run lint-fix > eslint.log",
    "fix": "npm run lint-fix & composer fix; wait; clear",
    "prepare": "sass-migrator division **/*.scss"
  },
  "devDependencies": {
    "@inertiajs/inertia": "^0.9.1",
    "@inertiajs/inertia-vue3": "^0.4.2",
    "@inertiajs/progress": "^0.2.5",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.3.0",
    "@vue/compiler-sfc": "^3.0.5",
    "axios": "^0.21",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.14.0",
    "eslint-webpack-plugin": "^3.0.1",
    "laravel-mix": "^6.0.6",
    "laravel-mix-eslint": "^0.2.0",
    "laravel-mix-polyfill": "^3.0.1",
    "lodash": "^4.17.19",
    "postcss": "^8.1.14",
    "postcss-import": "^12.0.1",
    "prettier": "^2.3.2",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "sass-migrator": "^1.5.1",
    "tailwindcss": "^2.0.1",
    "vue": "^3.0.5",
    "vue-eslint-parser": "^7.9.0",
    "vue-loader": "^16.1.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3"
  },
  "prettier": {
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/base",
      "plugin:vue/vue3-recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "globals": {
      "route": "readonly",
      "require": "readonly",
      "process": "readonly",
      "shallowRef": "readonly",
      "axios": "readonly",
      "_": "readonly"
    },
    "rules": {
      "vue/no-v-html": "off",
      "prefer-destructuring": [
        "error",
        {
          "array": true,
          "object": true
        }
      ],
      "prettier/prettier": "warn"
    }
  }
}
